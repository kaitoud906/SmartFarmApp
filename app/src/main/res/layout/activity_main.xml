<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/new_background"
    android:id="@+id/home_frame_container"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/information_board"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginTop="4dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:id="@+id/temperature_board"
                    android:layout_width="140dp"
                    android:layout_height="50dp"
                    android:background="@drawable/action_board_outline">

                    <RelativeLayout
                        android:id="@+id/logo_temperature"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="0dp"
                        android:background="@drawable/logo_board"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/ic_temperature" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_toEndOf="@id/logo_temperature"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/temperature_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_centerInParent="true"
                            android:text="@string/string_temperature"
                            android:textColor="#000000"
                            android:textSize="11dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/temp_information"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerInParent="true"
                            android:text="30°C"
                            android:textColor="#000000"
                            android:textSize="11dp" />
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/humidity_board"
                    android:layout_width="140dp"
                    android:layout_height="50dp"
                    android:background="@drawable/action_board_outline">

                    <RelativeLayout
                        android:layout_width="57dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginStart="1dp"
                        android:layout_marginRight="17dp"
                        android:layout_toEndOf="@id/logo_humidity"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/humidity_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_centerInParent="true"
                            android:text="@string/string_humidity"
                            android:textColor="#000000"
                            android:textSize="11dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/humid_information"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerInParent="true"
                            android:text="70%"
                            android:textColor="#000000"
                            android:textSize="11dp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/logo_humidity"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="0dp"
                        android:background="@drawable/logo_board_2"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/ic_drop_humidity" />
                    </RelativeLayout>

                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:id="@+id/light_board"
                    android:layout_width="140dp"
                    android:layout_height="50dp"
                    android:background="@drawable/action_board_outline">

                    <RelativeLayout
                        android:id="@+id/logo_light"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentLeft="true"
                        android:background="@drawable/logo_board_3"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/ic_brightness_control" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/light_text_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_toEndOf="@id/logo_light"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/light_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_centerInParent="true"
                            android:text="@string/string_light"
                            android:textColor="#000000"
                            android:textSize="11dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/light_information"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerInParent="true"
                            android:text="3000 lux"
                            android:textColor="#000000"
                            android:textSize="11dp" />
                    </RelativeLayout>

                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:id="@+id/rain_board"
                    android:layout_width="140dp"
                    android:layout_height="50dp"
                    android:background="@drawable/action_board_outline">

                    <RelativeLayout
                        android:id="@+id/logo_rain"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="-1dp"
                        android:background="@drawable/logo_board"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="37dp"
                            app:srcCompat="@drawable/ic_rain" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_toEndOf="@id/logo_rain"
                        android:layout_alignParentEnd="true"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/rain_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_centerInParent="true"
                            android:text="@string/string_rain"
                            android:textColor="#000000"
                            android:textSize="11dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/rain_information"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerInParent="true"
                            android:text="0%"
                            android:textColor="#000000"
                            android:textSize="11dp" />
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>



        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/last_watering_board"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginRight="5dp"
            android:id="@+id/last_watering_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/string_last_watering"
            android:textColor="#000000"
            android:textSize="13dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/last_watering_information"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5:25 PM 28/04/22"
            android:textColor="#000000"
            android:textSize="13dp" />
    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/information_board"
        app:layout_constraintStart_toStartOf="parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="ĐIỀU KHIỂN"
                android:textColor="@color/black"
                android:textStyle="bold"/>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <RelativeLayout
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <RelativeLayout
                        android:id="@+id/pump_water_button"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/action_button_outline"
                        android:paddingLeft="20dp">

                        <Switch
                            android:id="@+id/watering_button"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="TƯỚI NƯỚC" />
                    </RelativeLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:id="@+id/timer_board"
                        android:layout_width="144dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/action_board_outline">

                        <RelativeLayout
                            android:id="@+id/logo_timer"
                            android:layout_width="70dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentLeft="true"
                            android:background="@drawable/logo_board"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/text_view_countdown"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="00:00"
                                android:textColor="@android:color/black"
                                android:textSize="20sp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="75dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:padding="8dp">

                            <Button
                                android:id="@+id/button_reset"
                                android:layout_width="101dp"
                                android:layout_height="match_parent"
                                android:text="reset"
                                android:textSize="7dp"/>

                        </RelativeLayout>
                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="12dp"
                android:paddingStart="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Switch
                    android:id="@+id/auto_watering_switch"
                    android:layout_width="327dp"
                    android:layout_height="27dp"
                    android:text="Tưới nước tự động"
                    android:textColor="@color/black" />
                <Button
                    android:layout_marginTop="5dp"
                    android:id="@+id/watering_mode_setting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thiết lập giờ"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/watering_updown_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="LƯỢNG NƯỚC TƯỚI"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <SeekBar
                android:id="@+id/watering_seekBar"
                android:layout_width="322dp"
                android:layout_height="22dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="10dp" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="NGƯỠNG TƯỚI NƯỚC"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <RelativeLayout
                android:id="@+id/humidity_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp">

                <TextView
                    android:layout_centerVertical="true"
                    android:id="@+id/humidity_setting_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:text="Độ ẩm"
                    android:textColor="@color/black" />

                <LinearLayout
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/humidity_text_input1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#B4E0D6"
                        android:paddingRight="8dp">

                        <ImageView
                            android:id="@+id/logo_humidity_setting"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            android:src="@drawable/ic_drop_humidity"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <EditText
                            android:id="@+id/humidity_input1"
                            android:layout_width="45dp"
                            android:layout_height="36dp"
                            android:layout_marginStart="10dp"
                            android:gravity="center"
                            android:text="32"
                            android:textSize="15dp"
                            android:inputType="textAutoComplete"
                            app:layout_constraintStart_toEndOf="@id/logo_humidity_setting"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="%"
                            android:textColor="@color/black"
                            app:layout_constraintStart_toEndOf="@id/humidity_input1"
                            app:layout_constraintTop_toTopOf="parent" />


                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <TextView
                        android:id="@+id/humidity_setting_text_to"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:text="đến"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/black"/>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/humidity_text_input2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:background="#B4E0D6"
                        android:paddingRight="8dp">

                        <ImageView
                            android:id="@+id/logo_humidity_setting_2"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            android:src="@drawable/ic_drop_humidity"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <EditText
                            android:id="@+id/humidity_input2"
                            android:layout_width="45dp"
                            android:layout_height="36dp"
                            android:layout_marginStart="10dp"
                            android:gravity="center"
                            android:text="35"
                            android:textSize="15dp"
                            android:inputType="textAutoComplete"
                            app:layout_constraintStart_toEndOf="@id/logo_humidity_setting_2"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="%"
                            android:textColor="@color/black"
                            app:layout_constraintStart_toEndOf="@id/humidity_input2"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/temperature_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_centerVertical="true"
                    android:id="@+id/temperature_setting_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:text="Nhiệt độ"
                    android:textColor="@color/black" />

                <LinearLayout
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/temperature_text_input1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:background="#B4E0D6"
                        android:paddingRight="8dp">

                        <ImageView

                            android:id="@+id/logo_temperature_setting"
                            android:layout_width="25dp"
                            android:layout_height="24dp"

                            android:layout_marginTop="4dp"
                            android:src="@drawable/ic_temperature"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <EditText
                            android:inputType="textAutoComplete"
                            android:id="@+id/temperature_input1"
                            android:layout_width="50dp"
                            android:layout_height="36dp"
                            android:layout_marginStart="5dp"
                            android:gravity="center"
                            android:text="32"
                            android:textSize="15dp"
                            app:layout_constraintStart_toEndOf="@id/logo_temperature_setting"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="°C"
                            android:textColor="@color/black"
                            app:layout_constraintStart_toEndOf="@id/temperature_input1"
                            app:layout_constraintTop_toTopOf="parent" />


                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <TextView
                        android:id="@+id/temperature_setting_text_to"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_gravity="center_vertical"
                        android:text="đến"
                        android:textColor="@color/black" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/temperature_text_input2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:background="#B4E0D6"
                        android:paddingRight="8dp">

                        <ImageView
                            android:id="@+id/logo_temperature_setting_2"
                            android:layout_width="25dp"
                            android:layout_height="24dp"
                            android:layout_marginTop="4dp"
                            android:src="@drawable/ic_temperature"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <EditText
                            android:id="@+id/temperature_input2"
                            android:layout_width="50dp"
                            android:layout_height="36dp"
                            android:layout_marginStart="5dp"
                            android:gravity="center"
                            android:text="35"
                            android:textSize="15dp"
                            android:inputType="textAutoComplete"
                            app:layout_constraintStart_toEndOf="@id/logo_temperature_setting_2"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="°C"
                            android:textColor="@color/black"
                            app:layout_constraintStart_toEndOf="@id/temperature_input2"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>

            </RelativeLayout>

            <Button
                android:layout_marginEnd="25dp"
                android:layout_gravity="right"
                android:id="@+id/update_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Cập nhật"/>
        </LinearLayout>
    </LinearLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/watering_setting_form_dialog"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#52232F34"
        android:visibility="gone">

        <LinearLayout
            android:weightSum="2"
            android:orientation="vertical"
            android:id="@+id/watering_setting_dialog"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            >

            <RelativeLayout
                android:id="@+id/watering_setting_dialog_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/background_line_bot"
                android:paddingBottom="10dp"
                >

                <RelativeLayout
                    android:id="@+id/watering_setting_back_button"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/watering_setting_dialog_head_back"
                        android:layout_width="32dp"
                        android:layout_height="32dp"

                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"

                        android:layout_marginLeft="5dp"
                        android:src="@drawable/icon_back"
                        app:tint="#CC1111" />

                    <TextView
                        android:id="@+id/todo_assignment_form_add_list_head_text_back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/watering_setting_dialog_head_back"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="35dp"
                        android:gravity="center"
                        android:paddingTop="3dp"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:text="Hủy"
                        android:textColor="#CC1111" />
                </RelativeLayout>
                <TextView
                    android:id="@+id/todo_assignment_form_add_list_head_text_done"

                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:paddingTop="3dp"
                    android:text="Xong"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/auto_watering_time_config"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_centerInParent="true"
                    android:layout_alignParentLeft="true"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thời gian tưới nước tự động"/>

                <TextView
                    android:id="@+id/auto_watering_time"
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/shape_background"
                    android:gravity="center"
                    android:paddingVertical="5dp"
                    android:text="00:20"
                    android:textColor="@color/black"
                    android:textSize="13sp" />

            </RelativeLayout>
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Danh sách giờ tưới nước:"
                android:textColor="@color/black"
                android:textSize="14sp"/>

            <ScrollView
                android:layout_weight="1"
                android:id="@+id/watering_setting_dialog_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:isScrollContainer="true">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/list_item_dialog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </ScrollView>


            <LinearLayout
                android:layout_marginTop="10dp"
                android:id="@+id/watering_time_add_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:elevation="20dp"
                android:orientation="horizontal"
                android:paddingBottom="10dp">

                <ImageView
                    android:id="@+id/watering_time_add_list_button"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="20dp"

                    android:src="@drawable/icon_add_circle" />

                <TextView
                    android:id="@+id/watering_time_add_label_button"
                    android:textColor="@color/teal_200"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Thêm khung giờ mới" />
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/popup_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#52232F34"
                android:visibility="gone"
                android:layout_alignParentTop="true"
                >

                <RelativeLayout
                    android:id="@+id/time_selector"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_centerInParent="true"
                    android:layout_marginHorizontal="30dp"
                    android:background="@drawable/popup_background"
                    android:backgroundTintMode="src_in"
                    android:visibility="gone">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/add_time_title"
                        android:layout_width="match_parent"
                        android:layout_height="65dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="15dp"
                            android:text="Thời gian"
                            android:textColor="@color/black"
                            android:textSize="25sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="25dp"
                            android:layout_marginRight="20dp"
                            android:src="@drawable/ic_close"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <LinearLayout
                        android:id="@+id/add_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/add_minutes_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="16dp"
                                android:text="Phút"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <NumberPicker
                                android:id="@+id/watering_time_add_minutes"
                                android:layout_width="wrap_content"
                                android:layout_height="120dp"
                                android:layout_below="@id/add_minutes_title"
                                android:scaleX="0.8"
                                android:theme="@style/number_picker" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/add_secs_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="16dp"
                                android:text="Giây"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <NumberPicker
                                android:id="@+id/watering_time_add_secs"
                                android:layout_width="wrap_content"
                                android:layout_height="120dp"
                                android:layout_below="@id/add_secs_title"
                                android:scaleX="0.8"
                                android:theme="@style/number_picker" />

                        </RelativeLayout>
                    </LinearLayout>

                    <Button
                        android:id="@+id/done_add_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="20dp"
                        android:backgroundTint="@color/teal_200"
                        android:text="Xong"
                        android:textColor="@color/black" />
                </RelativeLayout>

            </RelativeLayout>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:background="?android:attr/windowBackground"
        android:foreground="?attr/selectableItemBackground"
        android:id="@+id/bottom_navigation"
        app:menu="@menu/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>